{
  "name": "posthtml-shiki",
  "description": "PostHTML plugin for highlighting code blocks with Shiki.",
  "version": "1.1.0",
  "license": "MIT",
  "author": "Cosmin Popovici (https://github.com/cossssmin)",
  "bugs": "https://github.com/posthtml/posthtml-shiki/issues",
  "homepage": "https://github.com/posthtml/posthtml-shiki",
  "repository": "posthtml/posthtml-shiki",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "dist/index.cjs",
  "module": "./dist/index.mjs",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vitest",
    "release": "np",
    "build": "unbuild",
    "prepack": "unbuild",
    "pretest": "npm run lint",
    "lint": "eslint lib/*.{js,ts}",
    "test": "vitest run --coverage"
  },
  "keywords": [
    "html",
    "posthtml",
    "posthtml-plugin",
    "shiki",
    "highlight",
    "syntax",
    "code"
  ],
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@stylistic/eslint-plugin": "^2.1.0",
    "@vitest/coverage-v8": "^1.3.1",
    "eslint": "^9.0.0",
    "np": "^10.0.0",
    "posthtml": "^0.16.5",
    "unbuild": "^2.0.0",
    "vitest": "^1.3.0"
  },
  "dependencies": {
    "posthtml-attrs-parser": "^1.0.1",
    "posthtml-render": "^3.0.0",
    "shiki": "^1.1.7"
  }
}
